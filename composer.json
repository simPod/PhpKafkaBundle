{
    "name": "simpod/kafka-bundle",
    "description": "Kafka Symfony bundle.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Simon Podlipsky",
            "email": "simon@podlipsky.net"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^8.0",
        "simpod/kafka": "^0.2.0",
        "symfony/config": "^5.0",
        "symfony/console": "^5.0",
        "symfony/contracts": "^2.0",
        "symfony/dependency-injection": "^5.0",
        "symfony/framework-bundle": "^5.0",
        "thecodingmachine/safe": "^1.0.2"
    },
    "require-dev": {
        "doctrine/coding-standard": "^9.0",
        "infection/infection": "^0.26.0",
        "kwn/php-rdkafka-stubs": "^2.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan": "^0.12.69",
        "phpstan/phpstan-phpunit": "^0.12.17",
        "phpstan/phpstan-strict-rules": "^0.12.9",
        "phpunit/phpunit": "^9.5",
        "psalm/plugin-phpunit": "^0.16.1",
        "roave/infection-static-analysis-plugin": "^1.7",
        "symfony/yaml": "^5.0",
        "thecodingmachine/phpstan-safe-rule": "^1.0",
        "vimeo/psalm": "^4.4"
    },
    "suggest": {
        "kwn/php-rdkafka-stubs": "Support and autocompletion for RDKafka in IDE | require as dev dependency"
    },
    "autoload": {
        "psr-4": {
            "SimPod\\KafkaBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SimPod\\KafkaBundle\\Tests\\": "tests/"
        }
    }
}
