{
    "name": "simpod/kafka-bundle",
    "description": "Kafka Symfony bundle.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Simon Podlipsky",
            "email": "simon@podlipsky.net"
        }
    ],
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true,
            "infection/extension-installer": true
        },
        "sort-packages": true
    },
    "require": {
        "php": "^8.3",
        "simpod/kafka": "^0.2.0",
        "symfony/config": "^7.0",
        "symfony/console": "^7.0",
        "symfony/contracts": "^3.0",
        "symfony/dependency-injection": "^7.0",
        "symfony/framework-bundle": "^7.0",
        "thecodingmachine/safe": "^2 || ^3"
    },
    "require-dev": {
        "doctrine/coding-standard": "^13.0",
        "infection/infection": "^0.29.0",
        "kwn/php-rdkafka-stubs": "^2.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan": "^1.0.0",
        "phpstan/phpstan-phpunit": "^1.0.0",
        "phpstan/phpstan-strict-rules": "^1.0.0",
        "phpunit/phpunit": "^11.0",
        "symfony/yaml": "^7.0",
        "thecodingmachine/phpstan-safe-rule": "^1.0"
    },
    "suggest": {
        "kwn/php-rdkafka-stubs": "Support and autocompletion for RDKafka in IDE | require as dev dependency"
    },
    "autoload": {
        "psr-4": {
            "SimPod\\KafkaBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SimPod\\KafkaBundle\\Tests\\": "tests/"
        }
    }
}
