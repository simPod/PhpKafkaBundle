{
    "name": "simpod/kafka-bundle",
    "description": "Kafka Symfony bundle.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Simon Podlipsky",
            "email": "simon@podlipsky.net"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": ">=7.1",
        "ext-rdkafka": "*",
        "symfony/console": "^3.3|^4.0|^4.1@dev",
        "symfony/framework-bundle": "~2.7|~3.0|~4.0",
        "symfony/yaml": "~2.7|~3.0|~4.0"
    },
    "require-dev": {
        "doctrine/coding-standard": "^4.0",
        "kwn/php-rdkafka-stubs": "^1.0",
        "phpstan/phpstan": "^0.9",
        "phpstan/phpstan-strict-rules": "^0.9",
        "phpunit/phpunit": "^7.0"
    },
    "suggest": {
        "kwn/php-rdkafka-stubs": "Support and autocompletion for RDKafka in IDE | require as dev dependency"
    },
    "autoload": {
        "psr-4": {
            "SimPod\\KafkaBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SimPod\\KafkaBundle\\Tests\\": "tests/"
        }
    }
}
